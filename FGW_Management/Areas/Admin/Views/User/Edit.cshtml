@model FGW_Management.Models.FGW_User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit";
}

<h5 class="mt-4 mb-4 text-center">Edit user (@Html.DisplayFor(model => model.UserName)) </h5>

<div class="container">
    <form asp-action="Edit" class="row" method="post" novalidate="novalidate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserName" />
        <input type="hidden" asp-for="NormalizedUserName" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="NormalizedEmail" />
        <input type="hidden" asp-for="EmailConfirmed" />
        <input type="hidden" asp-for="PasswordHash" />
        <input type="hidden" asp-for="SecurityStamp" />
        <input type="hidden" asp-for="ConcurrencyStamp" />
        <input type="hidden" asp-for="PhoneNumber" />
        <input type="hidden" asp-for="PhoneNumberConfirmed" />
        <input type="hidden" asp-for="TwoFactorEnabled" />
        <input type="hidden" asp-for="LockoutEnd" />
        <input type="hidden" asp-for="LockoutEnabled" />
        <input type="hidden" asp-for="AccessFailedCount" />

        <div class="col-12 col-lg-6 pl-4 pr-4 mt-5">
            <h5 class="mb-4">Profile</h5>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Choose Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-lg-6 pl-4 pr-4 mt-5">
            <h5 class="mb-4">Account Information</h5>
            <div class="form-group">
                <label class="control-label" for="TwoFactorEnabled">Two Factor Enabled</label>
                <input class="form-control" type="checkbox" data-val="true" data-val-required="The TwoFactorEnabled field is required." id="TwoFactorEnabled" name="TwoFactorEnabled" value="true">
                <span class="text-danger field-validation-valid" data-valmsg-for="TwoFactorEnabled" data-valmsg-replace="true"></span>
            </div>

            <div class="form-group">
                <label class="control-label" for="LockoutEnd">Lockout End</label>
                <input class="form-control" type="text" id="LockoutEnd" name="LockoutEnd" value="">
                <span class="text-danger field-validation-valid" data-valmsg-for="LockoutEnd" data-valmsg-replace="true"></span>
            </div>

            <div class="form-group">
                <label class="control-label" for="LockoutEnabled">Lockout Enabled</label>
                <input class="form-control" type="checkbox" checked="checked" data-val="true" data-val-required="The LockoutEnabled field is required." id="LockoutEnabled" name="LockoutEnabled" value="true">
                <span class="text-danger field-validation-valid" data-valmsg-for="LockoutEnabled" data-valmsg-replace="true"></span>
            </div>

            <div class="form-group">
                <label class="control-label" for="AccessFailedCount">Access Failed Count</label>
                <input class="form-control" type="number" data-val="true" data-val-required="The AccessFailedCount field is required." id="AccessFailedCount" name="AccessFailedCount" value="0">
                <span class="text-danger field-validation-valid" data-valmsg-for="AccessFailedCount" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group text-center">
            <div class="mt-4 mb-4 justify-content-center">
                <a asp-action="Index" class="btn btn-outline-primary"><i class="fas fa-arrow-left"></i> Back</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
