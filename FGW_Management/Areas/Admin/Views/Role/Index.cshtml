@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> 

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-area="" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Role List</li>
    </ol>
</nav>

<h1>Role List</h1>

<p>
    
    <a asp-action="Create" asp-area="Admin"  class="btn btn-outline-primary"><i class="fas fa-plus"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="fas fa-minus"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
